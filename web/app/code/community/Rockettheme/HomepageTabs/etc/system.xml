<config>
    <tabs>
        <rockettheme translate="label" module="homepagetabs">
            <label>RT RokMage Modules</label>
            <sort_order>196</sort_order>
        </rockettheme>
    </tabs>
    <sections>
        <homepage_tabs translate="label" module="homepagetabs">
            <label>HomepageTabs</label>
            <tab>rockettheme</tab>
            <frontend_type>text</frontend_type>
            <sort_order>3</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Homepage Tabs:</label>
							<comment><![CDATA[Note: You must call the block from your CMS homepage using the following: {{block type="catalog/product_list" name="rokmage_homepage_tabs" template="rokmagemodules/rokmage-homepagetabs/rokmage-homepage-tabs.phtml"}}]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>		
                    </fields>
                </general>
                <settings translate="label">
				<label>Product Grid Settings</label>
				<frontend_type>text</frontend_type>
				<sort_order>2</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
					<fields>
						<no_of_products translate="label, comment">
							<label>Number of products to show in tabs:</label>
							<comment><![CDATA[For example 6, 12, 24 - leave blank to show all products]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</no_of_products>
						<defaultlayout translate="label, comment">
							<label>Default products layout:</label>
							<comment><![CDATA[Choose default layout for product list]]></comment>
							<frontend_type>select</frontend_type>
                            <source_model>homepagetabsmodel/Homepagedefaultlayout</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</defaultlayout>
						<featured_cat translate="label, comment">
							<label>Select "Featured" category:</label>
							<comment><![CDATA[Choose a category of products to display under "Featured" tab, choose "Disabled" to to disable tab]]></comment>
							<frontend_type>select</frontend_type>
                            <source_model>homepagetabsmodel/Homepagetabsfeaturedcategory</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</featured_cat>
						<new_products translate="label">
                            <label>Show New Products tab:</label>
							<comment><![CDATA[Show the latest products in a tab]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </new_products>
						<onsale_products translate="label">
                            <label>Show On-Sale Products tab:</label>
							<comment><![CDATA[Show Sale products in a tab]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </onsale_products>
						<listimageheight translate="label, comment">
							<label>Image Height:</label>
							<comment><![CDATA[Set the height, in pixels, of the category product images (for example '135' - minus the 'px')]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</listimageheight>
						<listimagewidth translate="label, comment">
							<label>Image Width:</label>
							<comment><![CDATA[Set the width, in pixels, of the category product images (for example '135' - minus the 'px')]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</listimagewidth>
						<ribbons translate="label">
                            <label>Disable Ribbons:</label>
							<comment><![CDATA[Disable corner announcement ribbon]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ribbons>
						<filterbyroot translate="label">
                            <label>Filter By Store Root:</label>
							<comment><![CDATA[Enable this if using a multi-store setup, to only allow products from current store root category to be shown]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </filterbyroot>
					</fields>
				</settings>
            </groups>
        </homepage_tabs>
    </sections>
</config>